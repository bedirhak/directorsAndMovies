@model MovieModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Edit">
		@Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row mb-3">
                <label asp-for="Name" class="col-2 col-form-label">Movie Name</label>
				<div class="col-5">
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="ReleaseYear" class="col-2 col-form-label">Release Year</label>
				<div class="col-5">
					<input asp-for="ReleaseYear" class="form-control" />
					<span asp-validation-for="ReleaseYear" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="ImdbRank" class="col-2 col-form-label">Imdb Rank</label>
				<div class="col-5">
					<input asp-for="ImdbRank" class="form-control" />
					<span asp-validation-for="ImdbRank" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="DirectorId" class="col-2 col-form-label">Director Name</label>
				<div class="col-5">
					<select asp-for="DirectorId" class="form-select" asp-items="ViewBag.DirectorId">
						<option value="">-- Select --</option>
					</select>
					<span asp-validation-for="DirectorId" class="text-danger"></span>
				</div>
            </div>

			 <div class="row mb-3">
				<label asp-for="GenreIds" class="col-2 col-form-label">Genres Of Movie</label>
				<div class="col-5">
					<select asp-for="GenreIds" multiple class="form-select" asp-items="ViewBag.GenreId">

					</select>
					<span asp-validation-for="GenreIds" class="text-danger"></span>
				</div>
            </div>

            <div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Save" class="btn btn-primary" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Reset</button>
					&nbsp;&nbsp;
					<a asp-action="Index">Back to List</a>
				</div>
            </div>
        </form>
    </div>
</div>




